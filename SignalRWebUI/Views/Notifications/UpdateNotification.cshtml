@model UpdateNotificationDto
@{
	ViewData["Title"] = "UpdateNotification";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<form method="post">
						<input type="hidden" asp-for="NotificationID" />
						<div class="card-header">
							<div class="card-title">Bildirim Güncelleme Alanı</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Bildirim Türü</label>
								<input type="text" class="form-control" asp-for="Type" id="notificationtype">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Bildirim İkonu</label>
								<input type="text" class="form-control" asp-for="Icon" id="notificationtype">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Bildirim Açıklaması</label>
								<input type="text" class="form-control" asp-for="Description" id="notificationtype">
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-primary">Güncelle</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

