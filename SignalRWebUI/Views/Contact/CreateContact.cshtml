@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Alt İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<form method="post">
						<div class="card-header">
							<div class="card-title">Yeni İletişim Bilgisi Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="name">Lokasyonu Giriniz</label>
								<input type="text" class="form-control" asp-for="ContactLocation" id="name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon Numarası</label>
								<input type="text" class="form-control" asp-for="ContactPhone" id="Phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">E-Mail Adresi</label>
								<input type="email" class="form-control" asp-for="ContactMail" id="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Description">Kişi Sayısı</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="Description"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-primary">Yeni Bilgi Oluştur</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

