@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Alt İletişim Bilgileri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim Bilgileri ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Konum</th>
									<th scope="col">Telefon</th>
									<th scope="col">E-Mail</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactLocation</td>
										<td>@item.ContactPhone</td>
										<td>@item.ContactMail</td>
										<td>@item.FooterDescription</td>
										<td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-danger">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-primary">Yeni İletişim Bilgi Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

