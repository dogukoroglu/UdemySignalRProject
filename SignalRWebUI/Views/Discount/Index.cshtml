@model List<ResultDiscountDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirimleri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Günün İndirimleri Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İndirim yapılacak ürünler ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz(2 adet yapılacak) :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">Durum</th>
									<th scope="col">Ürün Görseli</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Durum Değiştirme</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.DiscountID</td>
										<td>@item.DiscountTitle</td>
										<td>@item.DiscountAmount</td>
										<td>İndirimli Ürün</td>
										<td>@item.DiscountImageUrl</td>
										<td>@item.DiscountDescription</td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-danger">Durum<> </></a></td>
										<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-danger">Sil</a></td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Discount/CreateDiscount/" class="btn btn-primary">Yeni İndirim Girişi</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

