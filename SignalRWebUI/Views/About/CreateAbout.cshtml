@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Anasayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<form method="post">
						<div class="card-header">
							<div class="card-title">Yeni Hakkmızda Yazısı Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="abouttitle">Başlığı Giriniz</label>
								<input type="text" class="form-control" asp-for="AboutTitle" id="abouttitle">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="imageurl">Görsel URL Giriniz</label>
								<input type="text" class="form-control" asp-for="AboutImageUrl" id="imageurl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="description">Açıklama Giriniz</label>
								<textarea rows="5" class="form-control" asp-for="AboutDescription" id="description"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-primary">Kaydet</button>
							<button type="reset" class="btn btn-danger">İptal Et</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

